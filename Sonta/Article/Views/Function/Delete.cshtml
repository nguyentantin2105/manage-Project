@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<Core.Entities.Function>
@using DotNetNuke.Web.Mvc.Helpers;
@using System.Web.Mvc;
@using Article.Components

<h2> Xóa tính năng</h2>
<hr />
<div class="pad-20">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-3">
                    <label for="@(Model.FuncName)">Tên tính năng</label>
                </div>
                <div class="col-md-9">
                    @Model.FuncName
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label for="@Model.StartDate">Ngày bắt đầu</label>
                </div>
                <div class="col-md-3">
                    @Model.StartDate.ToString("dd/MM/yyyy")
                </div>
                <div class="col-md-3">
                    <label for="@Model.ExpectEndDate">Ngày kết thúc</label>
                </div>
                <div class="col-md-3">
                    @Model.ExpectEndDate.ToString("dd/MM/yyyy")
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label for="@Model.Description">Mô tả</label>
                </div>
                <div class="col-md-9">
                    @Model.Description
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label for="@Model.Status">Trạng thái tính năng</label>
                </div>
                <div class="col-md-9">
                    @Model.Status
                </div>
            </div>

            @*<div class="row">
                    <div class="col-md-3">
                        <label for="@Model.DevID">Người thực hiện</label>
                    </div>
                    <div class="col-md-9">
                        @Model.Employees.Select(s => s.DisplayName).FirstOrDefault();
                    </div>
                </div>*@
        </div>
        <hr />

        <div class="form-group">
            <span class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-primary" /> |
                <a href="@Url.Action("Index", "Function")?projectID=@Model.ProjectID" class="btn btn-primary">Back to list</a>
            </span>
        </div>

    </div>
</div>



