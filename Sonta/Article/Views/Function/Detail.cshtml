@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<Core.Models.FunctionModel>
@using DotNetNuke.Web.Mvc.Helpers;
@using System.Web.Mvc;
@using Article.Components

<h2> Chi tiết tính năng</h2>
<hr />
<div class="pad-20">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-3">
                    <label for="@(Model.Function.FuncName)">Tên tính năng</label>
                </div>
                <div class="col-md-9">
                    @Model.Function.FuncName
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label for="@Model.Function.StartDate">Ngày bắt đầu</label>
                </div>
                <div class="col-md-3">
                    @Model.Function.StartDate.ToString("dd/MM/yyyy")
                </div>
                <div class="col-md-3">
                    <label for="@Model.Function.ExpectEndDate">Ngày kết thúc</label>
                </div>
                <div class="col-md-3">
                    @Model.Function.ExpectEndDate.ToString("dd/MM/yyyy")
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label for="@Model.Function.Description">Mô tả</label>
                </div>
                <div class="col-md-9">
                    @Model.Function.Description
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label for="@Model.Function.Status">Trạng thái tính năng</label>
                </div>
                <div class="col-md-9">
                    @Model.Function.Status
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label for="@Model.Function.DevID">Người thực hiện</label>
                </div>
                <div class="col-md-9">
                    @Model.Developer.DisplayName
                </div>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <span class="col-md-10">
                <a href="@Url.Action("Index","Function")?projectID=@Model.Function.ProjectID" class="btn btn-primary">Back to list</a>
            </span>
        </div>


    </div>
</div>



